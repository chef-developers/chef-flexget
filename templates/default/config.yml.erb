presets:
  tv:
    set:
      path: "<%= @config['tv_shows_dir']%>/{{series_name}}/Season {{series_season}}/"
    all_series:
      quality: hdtv

  movies:
    set:
      path:  "<%= @config['movies_dir']%>/{{movie_name}}/"
      min_quality: 720p

  torrent:
    transmission:
      ratio: 1.50
      removewhendone: Yes
      username: <%= @config['transmission_user']%>
      password: <%= @config['transmission_password']%>
      host: <%= @config['transmission_host']%>
      port: <%= @config['transmission_port']%>



feeds:
  tvfeeds:
    rss: <%= @config['tv_rss_url']%>
    preset:
      - tv
      - torrent

  kat_movies:
    rss: <%= @config['kat_rss_url'] %>
    accept_all: yes
    preset:
      - torrent
  kat_subscriptions:
    rss: <%= @config['kat_sub_rss_url'] %>
    accept_all: yes
    preset:
      - torrent
      - tv

  imdb_movie_queue_fill:
    # priority plugin is used so that this feed runs before the actual download feed
    priority: 1
    imdb_list:
      list: watchlist
      user_id: <%= @config['imdb_user_id']%>
    accept_all: yes
    queue_movies:
      quality: 720p
      force: no

  isohuntmovies_search:
    priority: 10
    preset:
      - movies
      - torrent
    torrent_alive: 10
    discover:
      what:
        - emit_movie_queue: yes
      from:
        - search_rss: http://isohunt.com/js/rss/{{search_term}}?iht=
        - torrentz
      type: movies
    movie_queue: yes